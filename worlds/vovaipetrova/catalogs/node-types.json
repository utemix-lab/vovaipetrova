    "Country": {
      "description": "Страна производителя",
      "domain": "functional",
      "abstraction_level": 4,
      "required_fields": ["id", "node_type", "name"],
      "optional_fields": ["name_ru", "code", "flag"],
      "allowed_outgoing": ["RELATED_TO"]
    },
    
    "Platform": {
      "description": "Платформа/формат плагина (VST2, VST3, AU, AAX)",
      "domain": "functional",
      "abstraction_level": 3,
      "required_fields": ["id", "node_type", "name", "definition"],
      "optional_fields": ["name_ru", "developer", "year"],
      "allowed_outgoing": ["RELATED_TO", "SUCCESSOR_OF"]
    }
  },
  
  "domains": {
    "physical": {
      "description": "Физические свойства звукоизвлечения",
      "color": "#ef4444"
    },
    "synthetic": {
      "description": "Методы цифрового синтеза",
      "color": "#8b5cf6"
    },
    "aesthetic": {
      "description": "Субъективные характеристики звука",
      "color": "#f59e0b"
    },
    "functional": {
      "description": "Роли, функции, организационные единицы",
      "color": "#22d3ee"
    },
    "systemic": {
      "description": "Мета-уровень, системы классификации",
      "color": "#10b981"
    }
  },
  
  "abstraction_levels": {
    "1": "Конкретный элемент (инструмент, сэмпл)",
    "2": "Техника исполнения (артикуляция)",
    "3": "Метод/механизм (синтез, производитель)",
    "4": "Категория (жанр, характер, настроение)",
    "5": "Мета-система (система классификации)"
  },
  
  "validation_rules": {
    "node_type_required": true,
    "domain_required_for_concepts": true,
    "definition_required_for_concepts": true,
    "string_arrays_forbidden": ["articulations", "genres", "characters", "moods", "synthesis_methods"],
    "edges_must_be_registered": true
  }
}
