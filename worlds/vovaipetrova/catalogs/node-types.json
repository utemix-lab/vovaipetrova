      "required_fields": ["id", "name", "manufacturer"],
      "optional_fields": ["name_ru", "description", "version", "url", "local_features"],
      "allowed_outgoing": ["HAS_MECHANISM", "USES_SYNTHESIS", "SUPPORTS", "BELONGS_TO_CATEGORY", "BELONGS_TO_GENRE", "HAS_CHARACTER", "EVOKES_MOOD", "PRODUCED_BY", "REQUIRES_PLATFORM"]
    },
    
    "SoundProductionMechanism": {
      "description": "Механизм звукоизвлечения (как рождается звук)",
      "domain": "physical",
      "abstraction_level": 3,
      "required_fields": ["id", "node_type", "name", "definition", "domain"],
      "optional_fields": ["name_ru", "abstraction_level", "typical_instruments", "related", "opposite"],
      "allowed_outgoing": ["RELATED_TO", "ENABLES"]
