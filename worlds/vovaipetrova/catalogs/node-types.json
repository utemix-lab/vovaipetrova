      "optional_fields": ["name_ru", "abstraction_level", "family", "notation", "difficulty", "related", "opposite"],
      "allowed_outgoing": ["APPLICABLE_TO", "COMMON_IN", "RELATED_TO"]
    },
    
    "Genre": {
      "description": "Музыкальный жанр/контекст",
      "domain": "aesthetic",
      "abstraction_level": 4,
      "required_fields": ["id", "node_type", "name", "definition", "domain"],
      "optional_fields": ["name_ru", "abstraction_level", "typical_synthesis", "typical_articulations", "typical_characters", "evokes_mood", "related", "parent_genre"],
      "allowed_outgoing": ["EVOKES", "PARENT_OF", "RELATED_TO"]
    },
    
    "Character": {
      "description": "Звуковая характеристика (тембральное качество)",
      "domain": "aesthetic",
      "abstraction_level": 4,
      "required_fields": ["id", "node_type", "name", "definition", "domain"],
      "optional_fields": ["name_ru", "abstraction_level", "frequency_profile", "produced_by_synthesis", "typical_for_genre", "evokes_mood", "related", "opposite"],
      "allowed_outgoing": ["EVOKES", "RELATED_TO", "OPPOSITE_OF"]
    },
    
    "Mood": {
      "description": "Эмоциональная окраска звучания",
      "domain": "aesthetic",
      "abstraction_level": 4,
      "required_fields": ["id", "node_type", "name", "definition", "domain"],
      "optional_fields": ["name_ru", "abstraction_level", "intensity", "energy", "valence", "typical_genres", "typical_characters", "related", "opposite"],
      "allowed_outgoing": ["RELATED_TO", "OPPOSITE_OF"]
