      "domain": "systemic",
      "abstraction_level": 5,
      "required_fields": ["id", "node_type", "name", "definition", "domain"],
      "optional_fields": ["name_ru", "abstraction_level", "created", "creators", "top_categories", "strengths", "weaknesses"],
      "allowed_outgoing": ["DEFINES_CATEGORY", "RELATED_TO"]
    },
    
    "SystemCategory": {
      "description": "Категория внутри системы классификации",
      "domain": "systemic",
      "abstraction_level": 4,
      "required_fields": ["id", "node_type", "name", "definition", "domain", "system"],
      "optional_fields": ["name_ru", "abstraction_level", "code", "parent_category", "examples"],
      "allowed_outgoing": ["BELONGS_TO_SYSTEM", "PARENT_OF", "RELATED_TO"]
